<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyScan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ocean_green</item>
        <item name="colorPrimaryVariant">@color/ocean_aquamarine</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/feldgrau</item>
        <item name="colorSecondaryVariant">@color/black_coffee</item>
        <item name="colorOnSecondary">@color/dark_purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_purple</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EasyScan.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorSecondary">@android:color/white</item>
    </style>
</resources>