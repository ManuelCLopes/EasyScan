<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.DetailsActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:contentDescription="teste" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/iv_photo_details"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_weight="70"
                    android:contentDescription="@string/content_description_details_photo"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_test"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:layout_margin="8dp"/>

                    <EditText
                        android:id="@+id/et_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textSize="14sp"
                        android:layout_margin="8dp"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="4dp">
                                <TextView
                                    android:id="@+id/tv_lines_label"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="lines"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/tv_lines"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginStart="40dp"
                                android:padding="4dp">
                                <TextView
                                    android:id="@+id/tv_words_label"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="words"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/tv_words"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginStart="40dp"
                                android:padding="4dp">
                                <TextView
                                    android:id="@+id/tv_lang_label"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="language"
                                    android:gravity="center_horizontal"/>
                                <TextView
                                    android:id="@+id/tv_lang"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:gravity="center_horizontal"/>
                            </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginStart="40dp"
                            android:padding="4dp">
                            <TextView
                                android:id="@+id/tv_sentiment_label"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="Sentiment"
                                android:gravity="center_horizontal"/>
                            <TextView
                                android:id="@+id/tv_sentiment"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginStart="40dp"
                            android:padding="4dp">
                            <TextView
                                android:id="@+id/tv_sentiment_score_label"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="sentiment_score"
                                android:gravity="center_horizontal"/>
                            <TextView
                                android:id="@+id/tv_sentiment_score"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginStart="40dp"
                            android:padding="4dp">
                            <TextView
                                android:id="@+id/tv_classification_label"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="classification"
                                android:gravity="center_horizontal"/>
                            <TextView
                                android:id="@+id/tv_classification"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="200dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:backgroundTint="@color/colorSecondaryLight"
            android:contentDescription="Cancel"
            android:src="@drawable/ic_close"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fab_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="32dp"
            android:contentDescription="Edit"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>